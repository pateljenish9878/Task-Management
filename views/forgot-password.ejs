<%- include('./partials/header', { title }) %>

<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-sm border-0">
      <div class="card-body p-4">
        <div class="text-center mb-4">
          <i class="fas fa-lock fa-3x text-primary mb-3"></i>
          <h2 class="card-title">Forgot Password</h2>
          <p class="text-muted">Enter your email address to receive a password reset OTP</p>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
        <% } %>

        <form action="/forgot-password" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-envelope"></i></span>
              <input type="email" class="form-control" id="email" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>" required>
            </div>
          </div>
          
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Send OTP</button>
            <a href="/login" class="btn btn-outline-secondary">Back to Login</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %> 