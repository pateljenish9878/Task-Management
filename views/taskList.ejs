<%- include('./partials/header', { title: 'Tasks' }) %>

<% if (typeof user !== 'undefined') { %>
  <%- include('./partials/navbar') %>
<% } %>

<div class="container py-4 fade-in">
  <div class="page-header d-flex justify-content-between align-items-center flex-wrap">
    <h1 class="h2 mb-2 mb-md-0 d-flex align-items-center">
      <% if (showAll) { %>
        <div class="bg-white text-primary p-2 rounded-circle shadow-sm me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
          <i class="fas fa-users-cog fa-lg"></i>
        </div>
        <span>All User Tasks</span>
      <% } else { %>
        <div class="bg-white text-primary p-2 rounded-circle shadow-sm me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
          <i class="fas fa-clipboard-list fa-lg"></i>
        </div>
        <span>My Tasks</span>
      <% } %>
    </h1>
    <a href="/tasks/create" class="btn btn-primary d-flex align-items-center shadow-hover">
      <i class="fas fa-plus me-2"></i> New Task
    </a>
  </div>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger alert-dismissible fade show shadow-sm mt-3" role="alert">
      <div class="d-flex align-items-center">
        <div class="bg-danger bg-opacity-10 p-2 rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
          <i class="fas fa-exclamation-circle text-danger"></i>
        </div>
        <div><%= error %></div>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success alert-dismissible fade show shadow-sm mt-3" role="alert">
      <div class="d-flex align-items-center">
        <div class="bg-success bg-opacity-10 p-2 rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
          <i class="fas fa-check-circle text-success"></i>
        </div>
        <div><%= success %></div>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <!-- Filters -->
  <div class="card shadow-sm filters-card slide-in-right">
    <div class="card-header d-flex align-items-center bg-white">
      <div class="text-primary me-2" style="width: 24px">
        <i class="fas fa-filter"></i>
      </div>
      <h5 class="mb-0">Filters</h5>
      <button class="btn btn-sm btn-outline-secondary ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
        <i class="fas fa-chevron-down"></i>
      </button>
    </div>
    <div class="collapse show" id="filterCollapse">
      <div class="card-body">
        <form action="/tasks" method="GET" class="row g-3">
          <% if (isAdmin) { %>
            <div class="col-md-3">
              <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="showAll" name="showAll" value="true" <%= showAll ? 'checked' : '' %> onchange="this.form.submit()">
                <label class="form-check-label" for="showAll">Show all user tasks</label>
              </div>
            </div>
            
            <% if (showAll && users.length > 0) { %>
              <div class="col-md-3">
                <label for="userId" class="form-label">Filter by User</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-user"></i></span>
                  <select class="form-select" id="userId" name="userId" onchange="this.form.submit()">
                    <option value="">All Users</option>
                    <% users.forEach(user => { %>
                      <option value="<%= user._id %>" <%= (typeof userId !== 'undefined' && userId === user._id.toString()) ? 'selected' : '' %>>
                        <%= user.username %>
                      </option>
                    <% }) %>
                  </select>
                </div>
              </div>
            <% } %>
          <% } %>
          
          <% if (categories.length > 0) { %>
            <div class="col-md-3">
              <label for="category" class="form-label">Filter by Category</label>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-tag"></i></span>
                <select class="form-select" id="category" name="category" onchange="this.form.submit()">
                  <option value="">All Categories</option>
                  <% categories.forEach(category => { %>
                    <option value="<%= category._id %>" <%= (typeof categoryId !== 'undefined' && categoryId === category._id.toString()) ? 'selected' : '' %>>
                      <%= category.name %>
                    </option>
                  <% }) %>
                </select>
              </div>
            </div>
          <% } %>
          
          <div class="col-md-3">
            <label for="status" class="form-label">Filter by Status</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-tasks"></i></span>
              <select class="form-select" id="status" name="status" onchange="this.form.submit()">
                <option value="">All Statuses</option>
                <option value="pending" <%= (typeof status !== 'undefined' && status === 'pending') ? 'selected' : '' %>>Pending</option>
                <option value="in-progress" <%= (typeof status !== 'undefined' && status === 'in-progress') ? 'selected' : '' %>>In Progress</option>
                <option value="completed" <%= (typeof status !== 'undefined' && status === 'completed') ? 'selected' : '' %>>Completed</option>
              </select>
            </div>
          </div>
          
          <div class="col-md-3">
            <label for="priority" class="form-label">Filter by Priority</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-flag"></i></span>
              <select class="form-select" id="priority" name="priority" onchange="this.form.submit()">
                <option value="">All Priorities</option>
                <option value="low" <%= (typeof priority !== 'undefined' && priority === 'low') ? 'selected' : '' %>>Low</option>
                <option value="medium" <%= (typeof priority !== 'undefined' && priority === 'medium') ? 'selected' : '' %>>Medium</option>
                <option value="high" <%= (typeof priority !== 'undefined' && priority === 'high') ? 'selected' : '' %>>High</option>
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <% if (tasks.length === 0) { %>
    <div class="alert alert-info d-flex align-items-center shadow-sm" role="alert">
      <div class="bg-info bg-opacity-10 p-2 rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
        <i class="fas fa-info-circle text-info"></i>
      </div>
      <div>
        No tasks found. <a href="/tasks/create" class="alert-link">Create a new task</a>.
      </div>
    </div>
  <% } else { %>
    <div class="row">
      <% tasks.forEach(task => { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100 shadow-sm task-card <%= task.status === 'completed' ? 'status-completed' : (task.status === 'in-progress' ? 'status-in-progress' : 'status-pending') %>">
            <div class="card-header d-flex justify-content-between align-items-center py-3">
              <h5 class="card-title mb-0 text-truncate" data-bs-toggle="tooltip" title="<%= task.title %>" style="max-width: 70%;">
                <%= task.title %>
              </h5>
              <div>
                <% if (task.priority === 'high') { %>
                  <span class="badge bg-danger"><i class="fas fa-arrow-up me-1"></i>High</span>
                <% } else if (task.priority === 'medium') { %>
                  <span class="badge bg-warning text-dark"><i class="fas fa-equals me-1"></i>Medium</span>
                <% } else { %>
                  <span class="badge bg-info text-dark"><i class="fas fa-arrow-down me-1"></i>Low</span>
                <% } %>
              </div>
            </div>
            
            <div class="card-body d-flex flex-column">
              <p class="card-text text-muted mb-3 text-truncate-2"><%= task.description || 'No description provided' %></p>
              
              <div class="mt-auto">
                <div class="mb-3">
                  <% if (task.status === 'completed') { %>
                    <span class="badge bg-success d-inline-flex align-items-center">
                      <i class="fas fa-check-circle me-1"></i>Completed
                    </span>
                  <% } else if (task.status === 'in-progress') { %>
                    <span class="badge bg-primary d-inline-flex align-items-center">
                      <i class="fas fa-spinner me-1 fa-spin-pulse"></i>In Progress
                    </span>
                  <% } else { %>
                    <span class="badge bg-secondary d-inline-flex align-items-center">
                      <i class="fas fa-clock me-1"></i>Pending
                    </span>
                  <% } %>
                </div>
                
                <div class="d-flex flex-column gap-2">
                  <% if (task.category) { %>
                    <div class="d-flex align-items-center">
                      <div class="text-primary me-2" style="width: 16px;">
                        <i class="fas fa-tag"></i>
                      </div>
                      <small><%= task.category.name %></small>
                    </div>
                  <% } %>
                  
                  <% if (task.dueDate) { %>
                    <div class="d-flex align-items-center">
                      <div class="<%= new Date(task.dueDate) < new Date() && task.status !== 'completed' ? 'text-danger' : 'text-primary' %> me-2" style="width: 16px;">
                        <i class="fas fa-calendar-alt"></i>
                      </div>
                      <small class="<%= new Date(task.dueDate) < new Date() && task.status !== 'completed' ? 'text-danger' : '' %>">
                        Due: <%= new Date(task.dueDate).toLocaleDateString() %>
                        <% if (new Date(task.dueDate) < new Date() && task.status !== 'completed') { %>
                          <span class="badge bg-danger ms-1">Overdue</span>
                        <% } %>
                      </small>
                    </div>
                  <% } %>
                  
                  <% if (showAll && task.user) { %>
                    <div class="d-flex align-items-center">
                      <div class="text-primary me-2" style="width: 16px;">
                        <i class="fas fa-user"></i>
                      </div>
                      <small>Assigned to: <%= task.user.username %></small>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
            
            <div class="card-footer bg-transparent d-flex justify-content-end gap-2">
              <a href="/tasks/edit/<%= task._id %>" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Edit this task">
                <i class="fas fa-edit"></i><span class="d-none d-md-inline ms-1">Edit</span>
              </a>
              <a href="/tasks/delete/<%= task._id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this task?')" data-bs-toggle="tooltip" title="Delete this task">
                <i class="fas fa-trash-alt"></i><span class="d-none d-md-inline ms-1">Delete</span>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<%- include('./partials/footer') %> 